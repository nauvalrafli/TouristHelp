<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginEnd="20dp"
    android:id="@+id/tvCard">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="#6DE3FAFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivPicCard"
                    android:adjustViewBounds="true"
                    android:background="@drawable/img_hotel1"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Hotel Majalengka Kencana"
                android:id="@+id/tvNameCard"
                android:singleLine="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E88F24"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:text="220.000"
                android:id="@+id/tvPriceCard"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:id="@+id/tvLocCard"
                android:text="Dekat Sini"
                android:textColor="#5E6A6A"
                android:singleLine="true"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
